<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity ScPosts.
    -->
    <changeSet id="20180209070026-1" author="jhipster">
        <createTable tableName="sc_posts">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="jhi_number" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="jhi_time" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="jhi_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="content" type="longblob">
                <constraints nullable="true" />
            </column>
            <column name="content_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="edit_time" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="edit_user_id" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="hide_time" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="hide_user_id" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="ip_address" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="is_approved" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="is_spam" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="user_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="sc_discussions_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="sc_posts" columnName="jhi_time" columnDataType="datetime"/>
        <dropDefaultValue tableName="sc_posts" columnName="edit_time" columnDataType="datetime"/>
        <dropDefaultValue tableName="sc_posts" columnName="hide_time" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>
